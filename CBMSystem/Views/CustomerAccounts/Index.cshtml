        let loginM = document.getElementById("SuccessMessage");
        if (loginM) {
            setTimeout(() => {
                loginM.classList.add("show");
                setTimeout(() => {
                    loginM.classList.remove("show");
                }, 3000); // Hides after 3 seconds
            }, 500); // Small delay before showing
        }
    });
</script>

