@{
    ViewData["Title"] = "About";
}


@section Styles {
    <style>
        .custom-card {
            border-radius: 10px;
            background: #ffffff;
            padding: 20px;
            transition: 0.3s ease-in-out;
        }

            .custom-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
            }

        .card-title {
            margin-bottom: 1rem;
            font-weight: 600;
        }

        /* Google Map Section */

        .map-container {
            height: 400px;
            border-radius: 10px;
            overflow: hidden;
            margin-top: 15px;
        }

        #map {
            width: 100%;
            height: 100%;
        }
    </style>
}


<div class="container mt-5">
    <h2 class="text-center text-primary mb-5">About Cashless Banking Management System</h2>

    <div class="row g-4">
        <!-- System Overview -->
        <div class="col-md-12">
            <div class="card shadow-sm border-0 custom-card">
                <div class="card-body">
                    <h4 class="card-title text-primary">System Overview</h4>
                    <p class="card-text">
                        The <strong>Cashless Banking Management System</strong> is a modern web-based platform designed to simplify and secure all customer banking activities.
                        It enables digital account creation, real-time transaction management, KYC verification, and profile tracking — all under one secure interface.
                    </p>
                    <p class="card-text">
                        Built with scalability, speed, and usability in mind, it supports smooth integration with financial APIs and leverages encrypted storage for customer documents.
                    </p>
                </div>
            </div>
        </div>


        <!-- Google Map Section -->
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="custom-card">
                        <h3 class="card-title text-primary">Our Global Office Map</h3>
                        <div class="map-container">
                            <div id="map"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function initMap() {
                // Map center passed from controller
                var center = {
                    lat: parseFloat('@ViewBag.Latitude'),
                    lng: parseFloat('@ViewBag.Longitude')
                };

                var map = new google.maps.Map(document.getElementById('map'), {
                    zoom: 5,
                    center: center
                });

                // Global city markers
                var markers = [
                    { lat: 22.3072, lng: 73.1812, title: 'Vadodara, Gujarat, India' }

                ];

                // Add each marker to map
                markers.forEach(function (location) {
                    new google.maps.Marker({
                        position: { lat: location.lat, lng: location.lng },
                        map: map,
                        title: location.title
                    });
                });

                // var marker = new google.maps.Marker({
                //     position: location,
                //     map: map,
                //     title: "My Location"
                // });
            }
        </script>

        <script async defer
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBRWnpWQMTyerzD0nXfHtOBPhWn21cn-dE&callback=initMap">
        </script>



        <!-- Contact Info -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 custom-card h-100">
                <div class="card-body">
                    <h4 class="card-title text-primary">Contact Us</h4>
                    <ul class="list-unstyled fs-6">
                        <li><strong>Email:</strong> support@cbms.com</li>
                        <li><strong>Phone:</strong> +91-9876543210</li>
                        <li><strong>Head Office:</strong> Webmyne System, Baroda, India</li>
                        <li><strong>Support Hours:</strong> Mon - Fri, 9:00 AM - 6:00 PM IST</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Development Team -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 custom-card h-100">
                <div class="card-body">
                    <h4 class="card-title text-primary">Development Team</h4>
                    <p class="card-text">
                        Developed and maintained by a dedicated team of full-stack developers and system architects, the CBMS is built with .NET Core, Entity Framework, and modern front-end libraries.
                    </p>
                    <ul class="list-unstyled">
                        <li><strong>Developed By :</strong> Sheroni Christian</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
