@model CBMSystem.Models.User
@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-4" style="max-width: 600px;">
    <div class="card shadow-sm border-0">
        <div class="card-header text-white d-flex justify-content-between align-items-center" style="background-color:#34495e;">
            <h5 class="mb-0">User Profile</h5>
            <a asp-action="Index" class="btn btn-secondary btn-sm">Back</a>
        </div>
        <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">Date of Birth</dt>
            <dd class="col-sm-9">@Model.DateOfBirth.ToString("dd MMM yyyy")</dd>

            <dt class="col-sm-3">Gender</dt>
            <dd class="col-sm-9">@Model.Gender</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">KYC Status</dt>
            <dd class="col-sm-9">@Model.Kycstatus</dd>

            <dt class="col-sm-3">User Type</dt>
            <dd class="col-sm-9">@Model.UserType</dd>
        </dl>

        <div class="d-flex justify-content-end gap-2 mt-3">
            <a asp-action="Edit" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit Profile
            </a>
            <a asp-action="ChangePassword" class="btn btn-secondary">
                <i class="fas fa-key"></i> Change Password
            </a>
        </div>
    </div>
</div>
</div>
