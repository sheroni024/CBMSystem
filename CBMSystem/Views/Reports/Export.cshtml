<div class="d-flex justify-content-center mt-4">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="background-color: #f8f9fa; width: 100%; max-width: 500px;">
        <h5 class="card-title mb-4 text-center">
            <i class="fas fa-file-export me-2"></i>📊 Export Reports
        </h5>

        <form method="post" asp-action="Export">
            <div class="mb-3">
                <label for="mainModule" class="form-label fw-semibold">Main Module</label>
                <select id="mainModule" name="mainModule" class="form-select" onchange="updateSubModules()">
                    <option value="Customer">Customer</option>
                    <option value="Transaction">Transaction</option>
                    <option value="Loan">Loan</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="subModule" class="form-label fw-semibold">Sub Module</label>
                <select id="subModule" name="subModule" class="form-select">
                    <option value="AddCustomer">AddCustomer</option>
                    <option value="DematAccount">DematAccount</option>
                    <option value="Investment">Investment</option>
                </select>
            </div>

            <div class="mb-4">
                <label for="format" class="form-label fw-semibold">File Format</label>
                <select name="format" class="form-select">
                    <option value="csv">CSV</option>
                    <option value="txt">Text</option>
                    <option value="pdf">PDF</option>
                </select>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fas fa-download me-1"></i> Download
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function updateSubModules() {
            const sub = document.getElementById("subModule");
            const main = document.getElementById("mainModule").value;

            sub.innerHTML = "";

            if (main === "Customer") {
                sub.innerHTML += `<option value="AddCustomer">AddCustomer</option>`;
                sub.innerHTML += `<option value="DematAccount">DematAccount</option>`;
                sub.innerHTML += `<option value="Investment">Investment</option>`;
            } else {
                sub.innerHTML += `<option value="All">All</option>`;
            }
        }
    </script>
}
