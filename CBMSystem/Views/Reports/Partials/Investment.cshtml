@model IEnumerable<CBMSystem.Models.Investment>

<div class="card shadow-sm border-0">
    <div class="card-header d-flex justify-content-between align-items-center bg-light">
        <h4 class="mb-0">Investment Report</h4>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-warning text-center">No customer data found.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle text-center">
                    <thead class="text-white" style="background-color:#2c3e50;">
                        <tr>
                            <th>#</th>
                            <th>Investment Name</th>
                            @* <th>Account No</th> *@
                            <th>Investment Type</th>
                            <th>Amount</th>
                            <th>Applied Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var investment in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@investment.InvestmentName</td>
                                @* <td>@investment.</td> *@
                                <td>@investment.GetType</td>
                                <td>@investment.InvestmentAmount</td>
                                <td>@investment.CreatedAt.("dd MMM yyyy")</td>
                                <td>
                                    <a class="btn btn-sm btn-primary"
                                       href="@Url.Action("Details", "Reports", new { type = "investment", id = investment.InvestmentId })">
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
