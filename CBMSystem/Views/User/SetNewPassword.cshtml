@using CBMSystem.ViewModels
@model ChangePasswordVM

@{
    ViewData["Title"] = "Set New Password";
}

<h2 class="text-center">Set New Password</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            @using (Html.BeginForm("SetNewPassword", "User", FormMethod.Post, new { @class = "card p-4 shadow" }))
            {
                //Html.HiddenFor(m => m.Email) <!-- Hidden email field -->

                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Enter New Password" })
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "form-label mt-2" })
                    @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control", placeholder = "Confirm New Password" })
                    @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mt-3 text-center">
                    <button type="submit" class="btn btn-success w-100">Reset Password</button>
                </div>
            }
        </div>
    </div>
</div>


