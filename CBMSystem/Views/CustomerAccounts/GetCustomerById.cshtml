    <div class="row mt-4">
        <div class="col-md-6 text-center">
            <h5>Profile Image</h5>
            <img src="https://localhost:7120/uploads/customers/@Model.ProfileImage"
                 alt="Profile Image"
                 class="img-fluid img-thumbnail rounded shadow-sm"
                 style="max-height: 200px;" />
        </div>
        <div class="col-md-6 text-center">
            <h5>Signature Image</h5>
            <img src="https://localhost:7120/uploads/customers/@Model.SignatureImage"
                 alt="Signature Image"
                 class="img-fluid img-thumbnail rounded shadow-sm"
                 style="max-height: 200px;" />
        </div>
    </div>

