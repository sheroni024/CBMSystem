@using CBMSystem.ViewModels
@model TransactionPdfViewModel

<style>
    body {
        font-family: Arial, sans-serif;
        font-size: 12px;
    }

    h2 {
        text-align: center;
        margin-bottom: 25px;
        font-size: 20px;
        font-weight: bold;
        color: #333;
    }

    p {
        font-size: 13px;
        margin: 4px 0;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        font-size: 12px;
        margin-top: 10px;
    }

    th, td {
        border: 1px solid #000;
        padding: 8px 10px;
        text-align: center;
        height: 28px;
    }

    th {
        background-color: lightgray;
        font-size: 14px;
        font-weight: bold;
        color: #333;
    }

    td {
        font-size: 12px;
    }
</style>

<h2>Transaction History - Last @Model.Months Month(s)</h2>
<p><strong>Customer ID:</strong> @Model.CustomerId</p><br />
<p><strong>Account Number:</strong> @Model.AccountNumber</p>

<table>
    <thead>
        <tr>
            <th>Serial No</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Txn ID</th>
            <th>Ref No</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @{
            int serial = 1;
        }
        @foreach (var tx in Model.Transactions)
        {
            <tr>
                <td>@serial</td>
                <td>@tx.TransactionType</td>
                <td>@tx.Amount.ToString("F2")</td>
                <td>@tx.TransactionDate.ToString("yyyy-MM-dd")</td>
                <td>@tx.TransactionId</td>
                <td>@tx.ReferenceNumber</td>
                <td>@(tx.Description ?? "")</td>
            </tr>
            serial++;
        }
    </tbody>
</table>
