@model Transaction

@{
    ViewData["Title"] = "Add Transaction";
}

<h2 class="text-center my-4">Add New Transaction</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="Add" method="post">
                        <div class="mb-3">
                            <label asp-for="AccountNumber" class="form-label fw-bold">Account Number</label>
                            <select asp-for="AccountNumber" asp-items="ViewBag.Accounts" class="form-select">
                                <option value="">-- Select Account --</option>
                            </select>
                            <span asp-validation-for="AccountNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TransactionType" class="form-label fw-bold">Transaction Type</label>
                            <select asp-for="TransactionType" asp-items="new SelectList(ViewBag.TransactionTypes)" class="form-select">
                                <option value="">-- Select Type --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label fw-bold">Amount</label>
                            <input asp-for="Amount" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ReferenceNumber" class="form-label fw-bold">Reference No</label>
                            <input asp-for="ReferenceNumber" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BalanceAfterTransaction" class="form-label fw-bold">Balance After Transaction</label>
                            <input asp-for="BalanceAfterTransaction" class="form-control" />
                        </div>

                        <input type="hidden" asp-for="CreatedBy" value="SystemUser" />

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Save Transaction</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

