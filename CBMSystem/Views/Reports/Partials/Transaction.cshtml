@model IEnumerable<CBMSystem.Models.Transaction>

<div class="card shadow-sm border-0">
    <div class="card-header d-flex justify-content-between align-items-center bg-light">
        <h4 class="mb-0">Transaction Report</h4>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-warning text-center">No customer data found.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle text-center">
                    <thead class="text-white" style="background-color:#2c3e50;">
                        <tr>
                            <th>#</th>
                            <th>Transaction Type</th>
                            <th>Account No</th>
                            <th>Amount</th>
                            <th>Transaction Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var transaction in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@transaction.TransactionType </td>
                                <td>@transaction.AccountNumber</td>
                                <td>@transaction.Amount</td>
                                <td>@transaction.TransactionDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    <a class="btn btn-sm btn-primary"
                                       href="@Url.Action("Details", "Reports", new { type = "transaction", id = transaction.TransactionId })">
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
